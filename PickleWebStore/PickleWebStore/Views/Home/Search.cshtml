@model IEnumerable<PickleWebStore.Models.Product>
@{
    ViewBag.Title = "Arama";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    string search = ViewBag.search;
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <link href="~/Assets/css/UIMainStyle.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="boxed">
        <div class="mainBase">
            <div>
                <div class="breadCrumb">
                    <a href="@Url.Action("Index", "Home")">Anasayfa</a> >
                    <label>@search </label>
                </div>
                

                <div class="productBase">
                    @if (Model != null && Model.Count() > 0)
                    {
                        <div style="font-size:20pt;margin:20px;">
                            <strong style="font-style:italic">"@search" </strong>aramanız için sonuçlar:
                        </div>
                        foreach (var item in Model)
                        {
                            <div class="product">
                                <a href="@Url.Action("Detail", "Product", new { id = item.ID })" style="text-decoration:none">
                                    <div class="image">
                                        <img src="~/Assets/ProductImages/@item.Image" />
                                    </div>
                                    <div class="name">
                                        @item.Name
                                    </div>
                                    <div class="price">
                                        @item.Price ₺ 
                                    </div>
                                </a>
                                <div class="cartAdd">
                                    <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = item.ID, quantity = 1 })">Sepete Ekle</a>
                                </div>
                            </div>
                        }
                        <div style="clear:both"></div>
                    }
                    @if (Model.Count() == 0)
                    {
                        <div style="font-size:20pt;margin:20px;">
                            <strong style="font-style:italic">"@search" </strong>aramanız için sonuç bulunamadı
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>

