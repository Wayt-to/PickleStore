@model PickleWebStore.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<div class="breadCrumb">
    <a href="@Url.Action("Index", "Home")">Anasayfa</a> >
    <a href="@Url.Action("Index", "Products")">Ürünler</a> >
    <label>Ürün Detayı</label>
</div>

<div class="pageContent">

    <h2 style="margin-left:300px;font-size:25pt;padding:15px 10px;">Ürün Düzenle</h2>
    <hr style="color:silver;width:60%;align-content:center;margin-left:290px;margin-top:6px;" />
    <div style="margin-left:300px; margin-top:20px">
        <table border="1" cellpadding="5" cellspacing="0" style="" width="600">
            <tr>
                <th align="left" width="30%">ID</th>
                <td>@Model.ID</td>
            </tr>
            <tr>
                <th align="left" >Resim</th>
                <td><img src="~/Assets/ProductImages/@Model.Image" alt="Alternate Text" style="width:150px;margin:10px;"/></td>
            </tr>
            <tr>
                <th align="left">Ürün Adı</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th align="left">Ürün Barkodu</th>
                <td>@Model.Barcode</td>
            </tr>
            <tr>
                <th align="left">Ürün Kategorisi</th>
                <td>@Model.category.Name</td>
            </tr>
            <tr>
                <th align="left">Ürün Markası</th>
                <td>@Model.brand.Name</td>
            </tr>
            <tr>
                <th align="left">Ürün Stoğu</th>
                <td>@Model.Stock</td>
            </tr>
            <tr>
                <th align="left">Ürün Fiyatı</th>
                <td>@Model.Price</td>
            </tr>
            <tr>
                <th align="left">Ürün Durum</th>
                <td>
                    @if (@Model.IsActive)
                    {
                        <label>Satışta</label>
                    }
                    else
                    {
                        <label>Satışta Değil</label>
                    }     
                </td>
            </tr>
            <tr>
                <th align="left">Silinme Durumu</th>
                <td>
                    @if (Model.IsDeleted)
                    {
                        <label>Silinmiş</label>
                    }
                    else
                    {
                        <label>Silinmemiş</label>
                    }
                </td>
            </tr>
        </table>
        @using (Html.BeginForm())
        {
            <div class="row">
                @Html.ActionLink("Ürünler Listesine Dön", "Index", "", new { @class = "btn-back", @style = "margin-left:800px" })
            </div>
        }

    </div>

</div>