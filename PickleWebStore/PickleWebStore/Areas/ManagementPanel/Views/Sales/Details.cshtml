@model PickleWebStore.Models.Sale

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<div class="breadCrumb">
    <a href="@Url.Action("Index", "Home")">Anasayfa</a> >
    <a href="@Url.Action("Index", "Sales")">Satışlar</a> >
    <label>Satış Detayı</label>
</div>

<div class="pageContent">

    <h2 style="margin-left:300px;font-size:25pt;padding:15px 10px;">Satış Detayları</h2>
    <hr style="color:silver;width:60%;align-content:center;margin-left:290px;margin-top:6px;" />
    <div style="margin-left:300px;margin-top:20px;">
        <table border="1" cellpadding="5" cellspacing="0" style="border:1px solid silver" width="600">
            <tr>
                <th align="left" width="30%">ID</th>
                <td>@Model.ID</td>
            </tr>
            <tr>
                <th align="left">Üye Adı</th>
                <td>@Model.Member.Username</td>
            </tr>
            <tr>
                <th align="left">Ürün ADI</th>
                <td>@Model.Product.Name</td>
            </tr>
            <tr>
                <th align="left">Adres</th>
                <td>@Model.Address</td>
            </tr>
            <tr>
                <th align="left">Üye Maili</th>
                <td>@Model.Member.Mail</td>
            </tr>
            <tr>
                <th align="left">Satış Fiyatı</th>
                <td>@Model.Price</td>
            </tr>
            <tr>
                <th align="left">Adet</th>
                <td>@Model.Quantity</td>
            </tr>
            <tr>
                <th align="left">Toplam Tutar</th>
                <td>@Model.TotalPrice</td>
            </tr>
            <tr>
                <th align="left">Satış Tarihi</th>
                <td>@Model.SaleTime</td>
            </tr>
            <tr>
                <th align="left">Aktiflik</th>
                <td>
                    @if (@Model.IsActive)
                    {
                        <label>Aktif</label>
                    }
                    else
                    {
                        <label>Deaktif</label>
                    }
                </td>
            </tr>
            <tr>
                <th align="left">Silinme Durumu</th>
                <td>
                    @if (Model.IsDeleted)
                    {
                        <label>Silinmiş</label>
                    }
                    else
                    {
                        <label>Silinmemiş</label>
                    }
                </td>
            </tr>
        </table>
        @using (Html.BeginForm())
        {
            <div class="row">
                @Html.ActionLink("Satış Listesine Dön", "Index", "", new { @class = "btn-back", @style = "margin-left:700px" })

            </div>
            @Html.AntiForgeryToken()
        }

    </div>

</div>

@section styles
{
    <link href="~/Areas/ManagerPanel/Assets/css/FormStyle.css" rel="stylesheet" />
}</p>
