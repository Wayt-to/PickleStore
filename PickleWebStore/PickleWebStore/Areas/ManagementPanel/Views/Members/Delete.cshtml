@model PickleWebStore.Models.Member

@{
    ViewBag.Title = "Üye Sil";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_Layout.cshtml";
}

<div class="breadCrumb">
    <a href="@Url.Action("Index", "Home")">Anasayfa</a> >
    <a href="@Url.Action("Index", "Mmebers")">Üyeler</a> >
    <label>Üye Sil</label>
</div>

<div class="pageContent">

    <h2 style="margin-left:300px;font-size:25pt;padding:15px 10px;">Üye Sil</h2>
    <hr style="color:silver;width:60%;align-content:center;margin-left:290px;margin-top:6px;" />
    <div style="margin-left:300px;margin-top:20px;">
        <h3 style="margin-bottom: 20px">Bu üyeyi silmek istediğinize emin misiniz?</h3>
        <table border="1" cellpadding="5" cellspacing="0" style="border:1px solid silver" width="600">
            <tr>
                <th align="left" width="30%">ID</th>
                <td>@Model.ID</td>
            </tr>
            <tr>
                <th align="left">Üye Adı</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th align="left">Üye Soyadı</th>
                <td>@Model.Surname</td>
            </tr>
            <tr>
                <th align="left">Kullanıcı Adı</th>
                <td>@Model.Username</td>
            </tr>
            <tr>
                <th align="left">Üye Maili</th>
                <td>@Model.Mail</td>
            </tr>
            <tr>
                <th align="left">Üye Şifresi</th>
                <td>@Model.Password</td>
            </tr>
            <tr>
                <th align="left">Son Giriş Tarihi</th>
                <td>@Model.LastLoginTime</td>
            </tr>
            <tr>
                <th align="left">Kayıt Tarihi</th>
                <td>@Model.CreationTime</td>
            </tr>
            <tr>
                <th align="left">Aktiflik</th>
                <td>
                    @if (@Model.IsActive)
                    {
                        <label>Aktif</label>
                    }
                    else
                    {
                        <label>Deaktif</label>
                    }
                </td>
            </tr>
            <tr>
                <th align="left">Silinme Durumu</th>
                <td>
                    @if (Model.IsDeleted)
                    {
                        <label>Silinmiş</label>
                    }
                    else
                    {
                        <label>Silinmemiş</label>
                    }
                </td>
            </tr>
        </table>
        @using (Html.BeginForm())
        {
            <div class="row">
                @Html.ActionLink("Üye Listesine Dön", "Index", "", new { @class = "btn-back", @style = "margin-left:700px" })
                <input type="submit" value="Üyeyi Sil" class="btn-save" style="background-color:darkred" />
            </div>
            @Html.AntiForgeryToken()
        }

    </div>

</div>

@section styles
{
    <link href="~/Areas/ManagerPanel/Assets/css/FormStyle.css" rel="stylesheet" />
}